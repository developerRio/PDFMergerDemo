<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/first_file_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick First File"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/path_first_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="12sp" />

    <Button
        android:id="@+id/sec_file_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pick Second File"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/path_sec_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="12sp" />

    <Button
        android:id="@+id/merge_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Merge PDF Files"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/merged_path_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="12sp" />

</androidx.appcompat.widget.LinearLayoutCompat>